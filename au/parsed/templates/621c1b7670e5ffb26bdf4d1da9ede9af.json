{"components/account/messages-form":"{{#if customer.inbox.orders}}\n<h5 class=\"mb-4\">{{lang 'forms.inbox.send_message'}}</h5>\n<form class=\"form form-message\" data-inbox-form action=\"{{urls.account.send_message}}\" method=\"post\">\n  {{inject 'enterOrderNum' (lang 'forms.validate.account.inbox.order')}} {{inject 'enterSubject' (lang 'forms.validate.account.inbox.subject')}}\n  {{inject 'enterMessage' (lang 'forms.validate.account.inbox.message')}}\n  <div class=\"row\">\n    <div class=\"col col-md-6\">\n      <div class=\"form-field\">\n        <label class=\"form-label form-label--custom\" for=\"message_order_id\">\n          {{lang 'forms.inbox.order' }}\n          <small>{{lang 'common.required' }}</small>\n        </label>\n        <select class=\"form-select\" name=\"message_order_id\" id=\"message_order_id\">\n          {{#each customer.inbox.orders}}\n          <option value=\"{{id}}\">{{lang 'forms.inbox.order_display' id=id date=date total=amount.formatted}}</option>\n          {{/each}}\n        </select>\n      </div>\n    </div>\n    <div class=\"col col-md-6\">\n      <div class=\"form-field\">\n        <label class=\"form-label form-label--custom\" for=\"message_subject\">\n          {{lang 'forms.inbox.subject' }}\n          <small>{{lang 'common.required' }}</small>\n        </label>\n        <input type=\"text\" class=\"form-input\" name=\"message_subject\" id=\"message_subject\" />\n      </div>\n    </div>\n  </div>\n\n  <div class=\"form-field\">\n    <label class=\"form-label form-label--custom\" for=\"message_content\">\n      {{lang 'forms.inbox.message' }}\n      <small>{{lang 'common.required' }}</small>\n    </label>\n\n    <textarea class=\"form-input\" name=\"message_content\" id=\"message_content\" rows=\"7\"></textarea>\n  </div>\n  <div class=\"form-actions form-actions--custom\">\n    <input class=\"btn btn-primary\" type=\"submit\" value=\"{{lang 'forms.inbox.submit_value' }}\" />\n    <input class=\"btn btn-outline-primary\" type=\"reset\" value=\"{{lang 'forms.inbox.clear_value' }}\" />\n  </div>\n</form>\n{{else}} {{> components/common/alert/alert-info (lang 'forms.inbox.no_orders')}} {{/if}}\n","components/common/alert/alert-info":"<div class=\"alertBox alertBox--info\">\n    <div class=\"alertBox-column alertBox-icon\">\n        <icon glyph=\"ic-success\" class=\"icon bb\" aria-hidden=\"true\" ><svg width=\"24\" height=\"24\" viewBox=\"0 0 24 24\" preserveAspectRatio=\"xMaxYMid meet\"><path d=\"M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-2h2v2zm0-4h-2V7h2v6z\"></path></svg></icon>\n    </div>\n    <p class=\"alertBox-column alertBox-message\">\n        <span>{{{this}}}</span>\n    </p>\n</div>\n"}
