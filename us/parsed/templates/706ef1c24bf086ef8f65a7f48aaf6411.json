{"components/common/modal/modal-close-btn-search":"<div class=\"header__search close\">\n  <button class=\" navUser-action navUser-action--quickSearch navUser-action--closesearch\"\n  type=\"button\"\n  title=\"{{lang 'common.close'}}\"\n  {{additional_attr}}\n>\n<span class=\"aria-description--hidden\">{{lang 'common.close'}}</span>\n<span aria-hidden=\"true\">&#215;</span>\n</button>\n</div>\n\n","components/common/quick-search":"<div class=\"form-searchbox\">\n  {{> components/common/modal/modal-close-btn-search\n  additional_attr='data-drop-down-close' }}\n  <form\n    class=\"form\"\n    onsubmit=\"return false\"\n    data-url=\"{{urls.search}}\"\n    data-quick-search-form\n  >\n    <div class=\"form-searchbox__top\">\n      <div class=\"container px-0\">\n        <fieldset class=\"form-fieldset form-fieldset--formsearch\">\n          <div class=\"form-field form-field--group\">\n            <label class=\"is-srOnly\" for=\"{{name}}\"\n              >{{lang \"search.quick_search.input_label\"}}</label\n            >\n            <input\n              class=\"form-input form-input--searchanise\"\n              data-search-quick\n              name=\"{{name}}\"\n              id=\"{{name}}\"\n              data-error-message=\"{{lang 'search.error.empty_field'}}\"\n              placeholder=\"{{lang 'search.quick_search.input_placeholder'}}\"\n              autocomplete=\"off\"\n            />\n            <button\n              type=\"submit\"\n              class=\"form-search d-flex justify-content-center align-items-center\"\n            >\n              <i class=\"icon icon--searchnav\">\n                <svg>\n                  <use\n                    xmlns:xlink=\"http://www.w3.org/1999/xlink\"\n                    xlink:href=\"#icon-search\"\n                  ></use>\n                </svg>\n              </i>\n            </button>\n          </div>\n        </fieldset>\n      </div>\n    </div>\n    <div class=\"form-searchbox__btm\">\n      <div\n        id=\"loaderimageQuickSearch\"\n        class=\"loadingOverlay loadingOverlay--quicksearch\"\n        style=\"display: none\"\n      ></div>\n      <div class=\"container\">\n        <section class=\"quickSearchResults\" data-bind=\"html: results\"></section>\n        <p\n          role=\"status\"\n          aria-live=\"polite\"\n          class=\"aria-description--hidden\"\n          data-search-aria-message-predefined-text=\"{{{lang 'search.results.quick_count_live'}}}\"\n        ></p>\n      </div>\n    </div>\n  </form>\n</div>\n"}
